# Youth Green Jobs & Waste Recycling Hub - Environment Variables
# Copy this file to .env and update the values

# ===== DJANGO CORE SETTINGS =====
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# ===== DATABASE CONFIGURATION =====
# Option 1: Use DATABASE_URL for production (PostgreSQL, MySQL, etc.)
DATABASE_URL=postgresql://username:password@localhost:5432/youth_green_jobs_db

# Option 2: Use individual database settings (alternative to DATABASE_URL)
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=youth_green_jobs_db
# DB_USER=your_db_user
# DB_PASSWORD=your_db_password
# DB_HOST=localhost
# DB_PORT=5432
# DB_INIT_COMMAND=SET sql_mode='STRICT_TRANS_TABLES'

# Database connection settings
# DB_CONN_MAX_AGE=60
# DB_CONN_HEALTH_CHECKS=True

# ===== CORS CONFIGURATION =====
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173,http://127.0.0.1:5173
CORS_ALLOW_CREDENTIALS=True

# ===== DJANGO REST FRAMEWORK =====
DRF_PAGE_SIZE=20

# ===== JWT CONFIGURATION =====
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7
JWT_ROTATE_REFRESH_TOKENS=True
JWT_BLACKLIST_AFTER_ROTATION=True
JWT_UPDATE_LAST_LOGIN=True
JWT_ALGORITHM=HS256
JWT_AUDIENCE=
JWT_ISSUER=youth-green-jobs-hub
JWT_LEEWAY=0
JWT_SLIDING_TOKEN_LIFETIME_MINUTES=60
JWT_SLIDING_TOKEN_REFRESH_LIFETIME_DAYS=7

# ===== EMAIL CONFIGURATION =====
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# ===== PLATFORM CONFIGURATION =====
DEFAULT_COUNTY=Kisumu
DEFAULT_COUNTRY=Kenya
DEFAULT_TIMEZONE=Africa/Nairobi
PLATFORM_NAME=Youth Green Jobs & Waste Recycling Hub
PLATFORM_VERSION=1.0.0
SUPPORT_EMAIL=support@youthgreenjobs.ke
SUPPORT_WEBSITE=https://youthgreenjobs.ke

# ===== YOUTH ELIGIBILITY =====
YOUTH_MIN_AGE=18
YOUTH_MAX_AGE=35

# ===== WASTE COLLECTION CONFIGURATION =====
DEFAULT_CREDIT_RATE=1.00
DEFAULT_CO2_REDUCTION_RATE=0.5000
DEFAULT_STOCK_THRESHOLD=5
DEFAULT_BONUS_MULTIPLIER=1.00
MAX_UPLOAD_SIZE_MB=10

# ===== FILE UPLOAD DIRECTORIES =====
WASTE_REPORTS_UPLOAD_DIR=waste_reports/
PRODUCTS_UPLOAD_DIR=products/
VERIFICATION_DOCS_UPLOAD_DIR=verification_documents/
PROFILE_PICTURES_UPLOAD_DIR=profile_pictures/

# ===== API CONFIGURATION =====
API_DEFAULT_TIMEOUT_SECONDS=30
API_MAX_REQUESTS_PER_MINUTE=100
ENABLE_API_VERSIONING=True

# ===== GEOLOCATION CONFIGURATION =====
DEFAULT_LATITUDE=-0.0917
DEFAULT_LONGITUDE=34.7680
GEOLOCATION_TIMEOUT_MS=10000
GEOLOCATION_MAX_AGE_MS=300000

# ===== ANALYTICS CONFIGURATION =====
ENABLE_ANALYTICS=True
ANALYTICS_RETENTION_DAYS=365
ENABLE_PERFORMANCE_MONITORING=True

# ===== SECURITY CONFIGURATION =====
# Basic Security Headers
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
X_FRAME_OPTIONS=DENY

# HTTPS/SSL Configuration (for production)
SECURE_SSL_REDIRECT=False
SECURE_PROXY_SSL_HEADER=
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False

# Cookie Security
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
SESSION_COOKIE_AGE=1209600
CSRF_COOKIE_SECURE=False
CSRF_COOKIE_HTTPONLY=True
CSRF_COOKIE_SAMESITE=Lax

# CSRF Trusted Origins (comma-separated)
CSRF_TRUSTED_ORIGINS=

